# DHIP - Digital Harm Intelligence Platform Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000

# Google Gemini AI API (for threat analysis)
VITE_APIKEY=your_gemini_api_key_here

# Firebase Configuration (for notifications and auth)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Google Maps API (for threat heatmap)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Twilio Configuration (for SMS alerts)
VITE_TWILIO_ACCOUNT_SID=your_twilio_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_token

# Application Settings
VITE_APP_NAME=DHIP
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_REAL_TIME_ALERTS=true
VITE_ENABLE_VOICE_DETECTION=false
VITE_ENABLE_BLOCKCHAIN=false
